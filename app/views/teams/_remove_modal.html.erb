<div class="modal" id="remove_team_modal">
  <div class="modal-content">
    <div class="row">
      <%= form_tag("teams/0", :method => :delete, class: "col s12 remove_team_form") do %>
        <div class="row">
          <div class="col s12">
            <h4>Remove Team</h4>
            <p>Are you sure you want to delete the team?</p>
          </div>
          <div class="input-field col s12">
            <input type="hidden" name="team_remove_id" id="team_remove_id">
            <%= submit_tag("Remove", class: "btn red right") %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
